<%- layout('layouts/main')%>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>SignIn</h3>
            </div>
            <div class="card-body">
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Insert Email" autofocus required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Insert Password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">SignIn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>